<!-- Comments Form -->
<div class="card my-4">
  <h5 class="card-header" style="font-size: 120%">发表评论:</h5>
  <div class="card-body">
      <%= form_for([@post, @post.comments.build]) do |f| %>
        <p>
          <%= f.label :评论 %><br>
          <%= f.text_area :content %>
        </p>
        <p>
          <%= f.hidden_field :user_id, value: session['user_id'] %>
          <%= f.hidden_field :audit, value: 0 %>
          <%= f.submit '发表' %>
        </p>
      <% end %>
  </div>
</div>
